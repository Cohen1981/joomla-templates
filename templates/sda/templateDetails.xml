<?xml version="1.0" encoding="utf-8"?>
<extension type="template" version="3.8" client="site" method="upgrade">
    <name>sda</name>
    <version>1.0</version>
    <creationDate>05.02.2018</creationDate>
    <author>Alexander Bahlo</author>
    <authorEmail>abahlo@hotmail.de</authorEmail>
    <copyright>Alexander Bahlo</copyright>
    <description>TPL_SDA_XML_DESCRIPTION</description>

    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
    </files>

    <positions>
        <position>top1</position>
        <position>top2</position>
        <position>top3</position>
        <position>top4</position>
        <position>menu</position>
        <position>search</position>
        <position>banner</position>
        <position>main-top</position>
        <position>main-bottom</position>
        <position>breadcrumbs</position>
        <position>sidebar-left</position>
        <position>sidebar-right</position>
        <position>footer</position>
        <position>debug</position>
    </positions>

    <languages folder="language">
        <language tag="de-DE">de-DE/de-DE.tpl_sda.ini</language>
        <language tag="de-DE">de-DE/de-DE.tpl_sda.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_sda.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_sda.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                        name="logoFile"
                        type="media"
                        default=""
                        label="TPL_SDA_LOGO_LABEL"
                />
                <field
                        name="siteTitle"
                        type="text"
                        default=""
                        label="JGLOBAL_TITLE"
                        filter="string"
                />
                <field
                        name="siteDescription"
                        type="text"
                        default=""
                        label="JGLOBAL_DESCRIPTION"
                        filter="string"
                />
                <field
                        name="topLabel"
                        type="text"
                        default="Internes MenÃ¼ anzeigen"
                        label="TPL_SDA_TOP_LABEL"
                        filter="string"
                />
            </fieldset>
        </fields>
    </config>
</extension>
